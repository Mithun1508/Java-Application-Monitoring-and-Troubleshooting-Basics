global:
    scrape_interval: 15s
    scrape_timeout: 10s
    evaluation_interval: 15s

scrape_configs:
- job_name: 'node_exporter'
  static_configs:
  - targets: ["{{ ansible_host }}:9100"]
    labels:
        env: prod

- job_name: 'app'
  metrics_path: '/dbo/actuator/prometheus'
  static_configs:
  - targets: ["{{ ansible_host }}:8080"]
    labels:
        env: prod
